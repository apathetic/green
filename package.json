{
  "name": "@apatheticwes/zigzag-ui",
  "version": "0.10.5",
  "description": "A vue component library and utility library",
  "homepage": "https://github.com/apathetic/zigzag-ui#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/apathetic/zigzag-ui.git"
  },
  "bugs": {
    "url": "https://github.com/apathetic/zigzag-ui/issues"
  },
  "license": "MIT",
  "types": "types/index.d.ts",
  "main": "dist/zigzag-ui.common.js",
  "module": "lib/index.js",
  "source": "src/index.js",
  "style": "dist/zigzag-ui.min.css",
  "sass": "src/styles/main.scss",
  "files": [
    "dist",
    "lib",
    "src",
    "types"
  ],
  "sideEffects": [
    "*.css",
    "*.scss",
    "*.vue",
    "./types"
  ],
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 10"
  ],
  "scripts": {
    "build": "scripts/build.sh",
    "build:docs": "vuepress build docs",
    "watch": "rollup -c scripts/rollup.config.js --watch",
    "watch:docs": "vuepress dev docs --no-cache",
    "lint": "eslint --ext .js,.vue ./ --ignore-pattern 'dist/' --ignore-pattern 'lib/'",
    "lint:fix": "npm run lint --  --fix",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "vue-cli-service test:unit"
  },
  "dependencies": {
    "currency-symbol-map": "^4.0.4",
    "lodash-es": "4.17.15",
    "quill": "1.3.7",
    "vue-date-pick": "1.3.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.9.5",
    "@rollup/plugin-alias": "3.1.0",
    "@rollup/plugin-babel": "^5.0.4",
    "@rollup/plugin-commonjs": "^13.0.0",
    "@rollup/plugin-node-resolve": "7.1.3",
    "@testing-library/jest-dom": "^5.11.4",
    "@vue/cli-plugin-unit-jest": "^4.5.4",
    "@vue/cli-service": "^4.5.4",
    "@vue/test-utils": "^1.0.4",
    "autoprefixer": "9.7.4",
    "cssnano": "^4.1.10",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^6.2.2",
    "node-sass": "^4.14.1",
    "postcss-cli": "^8.3.1",
    "postcss-custom-properties": "^10.0.0",
    "postcss-nested": "^5.0.3",
    "rollup": "2.7.3",
    "rollup-plugin-postcss": "3.1.1",
    "rollup-plugin-vue": "5.1.9",
    "sass-loader": "8.0.2",
    "svg-sprite": "1.5.0",
    "terser": "4.6.12",
    "vue-template-compiler": "2.6.12",
    "vuepress": "^1.5.2"
  },
  "peerDependencies": {
    "vue": "2.6.12"
  }
}
